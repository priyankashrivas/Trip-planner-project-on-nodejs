extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Create your account
            form.form.form--signup
                .form__group
                    label.form__label(for='name') User Name
                    input#name.form__input(type='name', placeholder='your name', required)
                .form__group
                    label.form__label(for='email') Email
                    input#email.form__input(type='email', placeholder='email@example.com', required)
                .form__group
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-lg
                    label.form__label(for='password-confirm') Confirm password
                    input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Signup