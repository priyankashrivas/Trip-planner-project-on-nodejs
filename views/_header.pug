header.header   
  nav.nav.nav--tours
      img(src='/img/header-logo.png' alt='My trip tours logo')
  .header__logo  
      a.nav__el(href='/') Alltours
  nav.nav.nav--user
      if user
          a.nav__el.nav__el--logout Logout
          a.nav__el(href='/me')
              img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
              span=user.name.split(' ')[0]
      else
          a.nav__el(href='/login') Login
          a.nav__el.nav__el--cta(href='/signup') Signup
      